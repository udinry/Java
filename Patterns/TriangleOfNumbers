import java.util.Scanner;
public class Solution {

	public static void main(String[] args) {
		Scanner s= new Scanner(System.in);
		int n=s.nextInt();
      int temp=0;
		for(int i=1;i<=n;i++)
		{
          
			for(int k=1;k<=n-i;k++)
			{
				System.out.print(" ");
			}
			for(int j=i;j<=i+temp;j++)
			{
				System.out.print(j);
			}
          temp=temp-1;
			for(int l=i+temp;l>=i;l--)
			{
				System.out.print(l);
			}
			System.out.println();
		temp=temp+2;
        }

	}

}
